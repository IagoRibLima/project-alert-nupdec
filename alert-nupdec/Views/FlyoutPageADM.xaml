<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:alert_nupdec.Views"
            x:Class="alert_nupdec.Views.FlyoutPageADM"
            Title="FlyoutPageADM"
            FlyoutLayoutBehavior="Popover"
            NavigationPage.HasNavigationBar="False"
            BackgroundColor="#1848a0">

    <FlyoutPage.Flyout>
        <ContentPage Title="Submenu"
                     Background="#1848a0"
                     Opacity="0.75">

            <VerticalStackLayout>
                <!--Botão Dashboard-->
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start"
                                       Padding="10">

                    <Image Source="login_entrar.png"
                           HeightRequest="26"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <Label Text="Dashboard"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#e8ecee"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapDashboard"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <!--Botão Ocorrências-->
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start"
                                       Padding="10">

                    <Image Source="login_entrar.png"
                           HeightRequest="26"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <Label Text="Ocorrências"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#e8ecee"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapOcorrencia"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <!--Botão Cadastrar Voluntários-->
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start"
                                       Padding="10">

                    <Image Source="login_entrar.png"
                           HeightRequest="26"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <Label Text="Cadastrar Voluntários"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#e8ecee"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapCadastrarVoluntario"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <!--Botão Áreas de Risco-->
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start"
                                       Padding="10">

                    <Image Source="login_entrar.png"
                           HeightRequest="26"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <Label Text="Áreas de Risco"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#e8ecee"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapAreaDeRisco"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <!--Botão Cadastrar Dicas-->
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start"
                                       Padding="10">

                    <Image Source="login_entrar.png"
                           HeightRequest="26"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <Label Text="Cadastrar Dicas"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#e8ecee"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapCadastroDica"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <!--Botão Cadastrar Treinamento-->
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start"
                                       Padding="10">

                    <Image Source="login_entrar.png"
                           HeightRequest="26"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <Label Text="Cadastrar Treinamento"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#e8ecee"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapCadastroTreinamento"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <!--Botão Configurações-->
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Start"
                                       Padding="10">

                    <Image Source="login_entrar.png"
                           HeightRequest="26"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <Label Text="Configurações"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#e8ecee"
                           VerticalOptions="Center"
                           Margin="0,10,0,10"/>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapConfiguracoes"/>
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>
                <!--Final dos Botões-->

            </VerticalStackLayout>

        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage NavigationPage.HasNavigationBar="False">
            <x:Arguments>
                <local:HomeADM/>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
  
</FlyoutPage>