<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="alert_nupdec.Login"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center"
                             Spacing="10"
                             Padding="10"
                             >

            <Label Text="Login de UsuÃ¡rio"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"
                   FontSize="25"
                   Margin="0,0,0,20"
                   />

            <Label Text="Email:"/>
            <Entry x:Name="txt_usuario"/>

            <Label Text="Senha:"/>
            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="5">
                <Entry x:Name="txt_senha" 
                       IsPassword="True"
                       Grid.Column="0"
                       />

                <Button x:Name="btn_senha"
                        ImageSource="olho_aberto.png"
                        Clicked="SenhaButton_Clicked"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        WidthRequest="50"
                        HeightRequest="40"
                        Background="Gray"
                        BorderWidth="0"
                        />
            </Grid>

            <Button Text="Entrar"
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked"
                    Margin="0,20,0,0"
                    />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>