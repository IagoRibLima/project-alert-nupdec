<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="alert_nupdec.Views.CadastroDica"
             Title="CadastroDica"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#a6a6a6">

    <Grid RowDefinitions="Auto, *">
        <!--Botão de voltar-->
        <Button Grid.Row="0"
                Text="Voltar"
                TextColor="#e8ecee"
                FontAttributes="Bold"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Clicked="ButtonVoltar"
                Margin="8"
                Padding="12"
                BackgroundColor="#1848a0"/>

        <!--Conteúdo rolável-->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout VerticalOptions="Start"
                                 Padding="60,0,60,60"
                                 Spacing="10">

                <!--Título-->
                <Label Text="Cadastrar Dica"
                       TextColor="#1848a0"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,15"/>

                <!--Campo Nome da Dica-->
                <Label Text="Nome da Dica *"
                       TextColor="#1848a0"
                       FontAttributes="Bold"
                       FontSize="16"
                       Margin="10,2"/>
                <Border StrokeThickness="1"
                        BackgroundColor="#e8ecee"
                        Padding="8">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="5,5"
                                Radius="10"
                                Opacity="0.3"/>
                    </Border.Shadow>

                    <Entry x:Name="txt_nome_dica"
                           Placeholder="Digite o título da dica"
                           TextColor="DarkSlateGray"
                           BackgroundColor="Transparent"
                           ClearButtonVisibility="WhileEditing"/>
                </Border>

                <!--Campo Descrição-->
                <Label Text="Descrição *"
                       TextColor="#1848a0"
                       FontAttributes="Bold"
                       FontSize="16"
                       Margin="10,2"/>
                <Border StrokeThickness="1"
                        BackgroundColor="#e8ecee"
                        Padding="8">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="5,5"
                                Radius="10"
                                Opacity="0.3"/>
                    </Border.Shadow>

                    <Editor x:Name="txt_descricao"
                            Placeholder="Digite aqui a descrição da dica"
                            TextColor="DarkSlateGray"
                            BackgroundColor="Transparent"
                            AutoSize="TextChanges"
                            HeightRequest="150"/>
                </Border>

                <!--Botão de cadastrar-->
                <Border BackgroundColor="#ff751f"
                        Padding="4"
                        StrokeThickness="1"
                        Margin="0,20,0,0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ButtonCadastrarDica" />
                    </Border.GestureRecognizers>

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="2,0"
                                Radius="10"
                                Opacity="0.1"/>
                    </Border.Shadow>

                    <Button Text="Cadastrar"
                            TextColor="#e8ecee"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Clicked="ButtonCadastrarDica"
                            BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>