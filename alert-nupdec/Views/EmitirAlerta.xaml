<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="alert_nupdec.Views.EmitirAlerta"
             Title="EmitirAlerta"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#a6a6a6">

    <Grid RowDefinitions="Auto, Auto">
        <!--Botão de voltar-->
        <Button Grid.Row="0"
                Text="Voltar"
                TextColor="#e8ecee"
                FontSize="15"
                FontAttributes="Bold"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Clicked="ButtonVoltar"
                Margin="8"
                Padding="12"
                BackgroundColor="#1848a0"/>

        <!--ScrollView do formulário-->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout VerticalOptions="Start"
                                 Spacing="10"
                                 Padding="60,0,60,0"
                                 Margin="0,40">
                
                <!--Título da página-->
                <Label Text="Reportar Ocorrência"
                       TextColor="#1848a0"
                       FontSize="26"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       Margin="0,0,0,15"/>

                <!--Primeiro campo do formulário-->
                <Label Text="Tipo de Ocorrência *"
                       TextColor="#1848a0"
                       FontAttributes="Bold"
                       FontSize="16"/>
                <Picker x:Name="picker_ocorrencia"
                        Title="Selecione o tipo"
                        TitleColor="#1848a0"
                        TextColor="#1848a0"
                        BackgroundColor="#e8ecee"
                        FontSize="14">

                </Picker>

                <!--Segundo campo do formulário-->
                <Label Text="Endereço *"
                       TextColor="#1848a0"
                       FontAttributes="Bold"
                       FontSize="16"
                       Margin="10,2"/>
                <Border StrokeThickness="1"
                        BackgroundColor="#e8ecee"
                        Padding="8">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="5,5"
                                Radius="10"
                                Opacity="0.3"/>
                    </Border.Shadow>

                    <Entry x:Name="txt_endereco"
                           Placeholder="Rua, Numero, Bairro"
                           ClearButtonVisibility="WhileEditing"
                           PlaceholderColor="#6170ab"/>
                </Border>

                <!--Terceiro campo do formulário-->
                <Label Text="Descrição da ocorrência *"
                       TextColor="#1848a0"
                       FontAttributes="Bold"
                       FontSize="16"
                       Margin="10,2"/>
                <Border StrokeThickness="1"
                        BackgroundColor="#e8ecee"
                        Padding="8">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="5,5"
                                Radius="10"
                                Opacity="0.3"/>
                    </Border.Shadow>

                    <Entry x:Name="txt_descricao"
                           Placeholder="Descreva a situação com o máximo de detalhes"
                           ClearButtonVisibility="WhileEditing"
                           PlaceholderColor="#6170ab"/>
                </Border>

                <!--Quarto campo do formulário-->
                <Label Text="Anexar foto *"
                       TextColor="#1848a0"
                       FontAttributes="Bold"
                       FontSize="16"
                       Margin="10,2"/>
                <Border StrokeThickness="1"
                        BackgroundColor="#e8ecee"
                        Padding="8">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="5,5"
                                Radius="10"
                                Opacity="0.3"/>
                    </Border.Shadow>

                    <Entry x:Name="txt_imagem"
                           Placeholder="Adicionar foto"
                           ClearButtonVisibility="WhileEditing"
                           PlaceholderColor="#6170ab"/>
                </Border>

                <!--Botão para emitir o alerta-->
                <Border BackgroundColor="#ff751f"
                        Padding="4"
                        StrokeThickness="1"
                        Margin="0,20,0,0">

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ButtonEmitirAlerta" />
                    </Border.GestureRecognizers>

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="2,0"
                                Radius="10"
                                Opacity="0.1"/>
                    </Border.Shadow>

                    <Button Text="Emitir"
                            TextColor="#e8ecee"
                            FontSize="18"
                            FontAttributes="Bold"
                            BackgroundColor="Transparent"
                            Clicked="ButtonEmitirAlerta"
                            Margin="0"/>
                </Border>
                

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>