<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="alert_nupdec.Views.EmitirAlerta"
             Title="EmitirAlerta">

    <VerticalStackLayout VerticalOptions="Center"
                         Padding="10"
                         Spacing="10">

        <Button Text="Voltar"
                HorizontalOptions="Start"
                Clicked="VoltarButton_Clicked"/>

        <Label Text="Reportar Ocorrência"
               FontSize="Large"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <Label Text="Tipo de Ocorrência *"
               FontSize="16"/>
        <Picker x:Name="picker_ocorrencia"
                Title="Selecione o tipo"></Picker>

        <Label Text="Endereço *"
               FontSize="16"/>
        <Entry x:Name="txt_endereco"
               Placeholder="Rua, Numero, Bairro"
               ClearButtonVisibility="WhileEditing"/>

        <Label Text="Descrição da ocorrência *"
               FontSize="16"/>
        <Entry x:Name="txt_descricao"
               Placeholder="Descreva a situação com o máximo de detalhes"
               ClearButtonVisibility="WhileEditing"/>

        <Label Text="Anexar foto *"
               FontSize="16"/>
        <Entry x:Name="txt_imagem"
               Placeholder="Adicionar foto"
               ClearButtonVisibility="WhileEditing"/>

        <Button Text="Emitir"
                HorizontalOptions="Center"
                Clicked="EmitirOKButton_Clicked"
                Padding="50, 10"
                Margin="0,20,0,0"
                />

    </VerticalStackLayout>
</ContentPage>